<RelativeLayout style="@style/StandardLinearLayoutFillParentPage"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom toolbar -->
    <include layout="@layout/toolbar"/>

    <LinearLayout
        style="@style/StandardLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/Info"
            android:onClick="emergeReport"
            android:layout_width="wrap_content"
            android:text="@string/emerge_report"/>

        <Button
            style="@style/MarginInfo"
            android:onClick="emergeMnemonic"
            android:layout_width="wrap_content"
            android:text="@string/sets_mnemonic"/>

    </LinearLayout>
</RelativeLayout>