<LinearLayout
    style="@style/StandardLinearLayoutPage"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom toolbar -->
    <include layout="@layout/toolbar"/>

    <ListView
        android:layout_weight="1"
        android:id="@+id/lnStartNodesList"
        style="@style/GrayDividerListView"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_weight="1"
        android:id="@+id/lnStartDetails"
        style="@style/StandardLinearLayout">

        <TextView
            style="@style/Info"
            android:id="@+id/lnStartInfo"
            android:layout_width="wrap_content"/>

        <Button
            style="@style/MarginInfo"
            android:id="@+id/lnStartCancel"
            android:layout_width="wrap_content"
            android:text="@string/dialog_cancel"/>

    </LinearLayout>
</LinearLayout>